# Environment Configuration Template
# Copy this file to .env and modify as needed

# Model Configuration
MODEL_TYPE=resnet50  # Options: resnet50, qwen
EMBEDDING_DIM=512
BATCH_SIZE=32

# Database Configuration
CHROMA_DB_PATH=./chroma_db
COLLECTION_NAME=ir_embeddings

# Training Configuration
LEARNING_RATE=1e-4
EPOCHS=100
TARGET_ACCURACY=0.95

# Query Configuration
MAX_QUERY_TIME=2.0
TOP_K_RESULTS=5
CONFIDENCE_THRESHOLD=0.7

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ir_classification.log